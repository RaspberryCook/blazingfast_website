{{#*inline "content"}}
<h1><a href="/recipes/{{recipe.id}}">{{recipe.name}}</a></h1>

<p>Recipe of <a href="/users/{{user.id}}">{{user.firstname}} {{user.lastname}}</a></p>

<a href="/recipes/{{id}}/edit" class="btn btn-secondary">Edit</a>
<!-- delete button -->
<form action="/recipes/{{id}}" method="post">
    <input type="hidden" name="_method" value="delete" />
    <input type="submit" class="btn btn-danger" value="Delete">
</form>
{{/inline}}
{{~> layouts/main~}}